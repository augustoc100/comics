<% flash.each do |type, msg| %>
  <div class="alert alert-danger">
    <%= msg %>
  </div>
<% end %>

<style>
.custom-btn {
  margin-top: 1rem;
font-weight: bolder;
  color: #e62429;
  width: 10rem
}

.my-image {
margin-top: 1rem;
width: 10rem
}

.my-image:hover {
  border: .7rem solid #e62429;
}

body {
  background-color: gray;
}

.my-context {
  position: relative
}
</style>


<div class='container my-content'>

  <div class='row row-cols-5'>
    <% @comics.each do |comic| %>
      <div class='col'>
        <%= image_tag(comic.image_path, alt: comic.title, class: 'img-thumbnail my-image') %>

      </div>
    <% end %>
  </div>
  <div class='row'>
    <div class='col-3'>
      <button class='btn btn-light custom-btn'> PREVIOUS PAGE </button>
    </div>
    <div class='col-6'> </div>
    <div class='col-3'>
      <button class=' btn btn-light custom-btn'> NEXT PAGE </button>
    </div>
  </div>
</div>

