<% flash.each do |type, msg| %>
  <div class="alert alert-danger">
    <%= msg %>
  </div>
<% end %>

<style>
.custom-btn {
  margin-top: 1rem;
  font-weight: bolder;
  color: #e62429;
  width: 10rem
}

.my-image {
  margin-top: 1rem;
  width: 10rem
}

figure:hover .my-image {
  border: .7rem solid #e62429;
}

body {
  background-color: gray;
}

.my-context {
  position: relative
}

figure:hover .fig-content {
  display: inline
}
.fig-content {
  color: black;
  background-color: white;
  width: 157px;
  display: none
}
</style>

<div class='container my-content'>

  <div class='row row-cols-5'>
    <% @comics.each do |comic| %>
      <div class='col'>
        <figure class='figure'>
        <%= image_tag(comic.image_path, alt: comic.title, class: 'img-thumbnail my-image') %>
        <figcaption class='figure-caption fig-content'> <%= comic.liked %> && <%= comic.title%> </figcaption>
        </figure>
      </div>
    <% end %>
  </div>
  <div class='row'>
    <div class='col-3'>
      <a href=<%= @search.previous_page%>  class=' btn btn-light custom-btn'> PREVIOUS PAGE </a>
    </div>
    <div class='col-6'>-</div>
    <div class='col-3'>
      <a href=<%= @search.next_page%>  class=' btn btn-light custom-btn'> NEXT PAGE </a>
    </div>
  </div>
</div>

